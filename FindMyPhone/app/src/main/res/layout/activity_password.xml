<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.se.findmyphone.PasswordActivity">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checked"
        android:id="@+id/enable_ckbx"
        android:text="Enable password"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/pass1_edt"
        android:inputType="number"
        android:hint="enter password"
        android:layout_below="@id/enable_ckbx"
        android:layout_marginTop="20px"
        />
    <EditText
        android:layout_width="wrap_content"
        android:id="@+id/pass2_edt"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="re-enter password"
        android:inputType="number"
        android:layout_below="@id/pass1_edt"
        android:layout_marginTop="20px"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_below="@id/pass2_edt"
        android:layout_marginTop="20px"
        android:text="@string/set_password"
        android:gravity="center"
        android:id="@+id/set_btn"
        />
</RelativeLayout>
